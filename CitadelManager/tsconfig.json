{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "listFiles": true,    
        "declaration": false,
        "removeComments": true,
        "noLib": false,            
        "noImplicitAny": false,
        "outDir": "public/js",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]
    },    
    "exclude": [
        "vendor/**/*.ts",
        "node_modules**/*.ts"
    ],
    "include": [
        "resources/assets/js/**/*.ts",
        "typings/**/*.d.ts"
    ],
    "typeRoots": [
        "typings/global",
        "typings/modules",
        "node_modules/@types"
    ]
}