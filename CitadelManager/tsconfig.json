{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "sourceMap": true,
        "listFiles": true,
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "outDir": "public/js",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "vendor/**/*.ts",
        "typings"
    ],
    "include": [
        "resources/assets/js/**/*.ts"
    ],
    "typeRoots": [
        "typings/custom",
        "node_modules/@types"
    ]
}